{
  "name": "cargoexpress",
  "version": "2.1.0",
  "private": true,
  "description": "CargoExpress - International Shipping Platform",
  "author": "CargoExpress Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm --parallel start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "prisma:generate": "pnpm --filter @cargoexpress/prisma generate",
    "prisma:migrate": "pnpm --filter @cargoexpress/prisma migrate",
    "prisma:studio": "pnpm --filter @cargoexpress/prisma studio",
    "prisma:seed": "pnpm --filter @cargoexpress/prisma seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "clean": "pnpm -r clean && rimraf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
